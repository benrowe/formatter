{
    "name": "benrowe/formatter",
    "description": "A value formatter to display data to end users",
    "keywords": ["formatter", "output", "view"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Rowe",
            "email": "ben.rowe.83@gmail.com"
        }
    ],
    "require": {
      "php": "^5.4|^7.0",
      "phpunit/phpunit": "~4.0"
    },
    "suggest": {
      "carbon/carbon": "*"
    },
    "autoload": {
        "psr-4": {
            "Benrowe\\Formatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Benrowe\\Formatter\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --configuration build/phpunit.xml",
        "testcover": "phpunit --configuration build/phpunit.xml --coverage-html=build/output/html",
        "testci": "phpunit --configuration build/phpunit.xml --coverage-clover=build/output/coverage"
    }
}
